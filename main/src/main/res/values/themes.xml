<resources>

    <style name="Theme.YiLife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YiLife.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YiLife.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.YiLife" parent="Theme.MaterialComponents.Light" />

    <style name="Theme.YiLife.Fullscreen" parent="Theme.YiLife">
        <item name="android:actionBarStyle">@style/Widget.Theme.YiLife.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.YiLife.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>